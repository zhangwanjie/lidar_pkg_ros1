<launch>
    <!-- 加载机器人描述 (URDF) -->
    <param name="robot_description" textfile="$(find lidar_pkg)/urdf/lidar.urdf" />

    <!-- 1. Robot State Publisher -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" />

    <!-- 2. Lidar Node -->
    <node pkg="lidar_pkg" type="lidar_node" name="lidar_node" output="screen">
        <rosparam command="load" file="$(find lidar_pkg)/config/lidar_params.yaml" />
    </node>

    <!-- 3. RViz -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find lidar_pkg)/rviz/lidar.rviz" required="true" />
</launch>